{
  "name": "sdhelper",
  "version": "2.0.0",
  "description": "Application de centralisation de template et d'information pour le plateau mutualis√© du HelpDesk Econocom de Tours",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "dist": "build",
    "pack": "electron-builder"
  },
  "build": {
    "appId": "sdhelper",
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "node_modules",
      "js/",
      "indexes/",
      "img/",
      "css/"
    ],
    "extraResources": [
      {
        "from": "./js/mainProcess/db",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }

    ],
    "win": {
      "target": "nsis",
      "icon": "img/icon.ico"
    }
  },
  "keywords": [],
  "author": "Guillaume Colombi",
  "license": "ISC",
  "devDependencies": {
    "dexie": "^3.0.3",
    "electron": "^12.0.0",
    "electron-db": "^0.15.7",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "electron-reloader": "^1.2.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-db": "^0.15.7",
    "electron-log": "^4.3.5",
    "jquery": "^3.6.0",
    "update-electron-app": "^2.0.1"
  }
}
